<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Postagens.Views.PostView"
             Title="PostView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Tituloo}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry 
            Text="{Binding Corpo}"
            HeightRequest="80"/>
        <Button
            Text="Enviar"
            Command="{Binding DisplayPostsCommand}"/>
    </VerticalStackLayout>
</ContentPage>